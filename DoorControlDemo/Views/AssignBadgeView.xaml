<Window x:Class="DoorControlDemo.Views.AssignBadgeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoorControlDemo.Views"
        mc:Ignorable="d"
        Title="AssignBadgeView" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UserIdTextBox" TextWrapping="Wrap" Text="{Binding UserId}" Margin="204,188,462,188" RenderTransformOrigin="0.481,0.645"/>
        <TextBox x:Name="BadgeNumberTextBox" TextWrapping="Wrap" Text="{Binding BadgeId}" Margin="454,193,212,188" RenderTransformOrigin="0.481,0.645"/>
        <TextBlock TextWrapping="Wrap" FontSize="11" FontWeight="Bold" Text="UserId" Margin="204,146,507,246" RenderTransformOrigin="0.511,0.821"/>
        <TextBlock TextWrapping="Wrap" FontSize="11" FontWeight="Bold" Text="Badge Number" Margin="454,123,257,246"/>
        <Button x:Name="btnAssignBadge" FontSize="11" FontWeight="Bold" Content="ASSIGN" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Height="30" Width="100" Command="{Binding AssignBadgeCommand}"/>
    </Grid>
</Window>
